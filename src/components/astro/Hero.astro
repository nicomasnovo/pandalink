---
import { Image } from 'astro:assets';
import LogoPanda from '../images/logo-panda.jpg';
---

<section class="bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16 lg:px-12">
    <a
      href="#"
      class="inline-flex justify-between items-center py-1 px-4 mb-7 text-sm text-gray-700 bg-gray-100 rounded-full dark:bg-gray-800 dark:text-white hover:bg-gray-200 dark:hover:bg-gray-700"
      role="alert"
    >
      <span class="text-sm font-medium">Coming soon</span>
    </a>
    <div class="flex flex-wrap justify-center">
      <div class="w-6/12 lg:w-3/12 px-4 mb-4">
        <Image
          src={LogoPanda}
          alt="..."
          class="shadow rounded-full max-w-full h-auto align-middle border-none"
        />
      </div>
    </div>
    <h1
      class="mb-4 md:text-5xl lg:text-6xl text-4xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-green-400 to-blue-600"
    >
      Pandalink
    </h1>
    <p
      class="mb-8 text-lg font-normal text-gray-500 lg:text-xl sm:px-16 xl:px-48 dark:text-gray-400"
    >
      A new way of sharing links with your audience.
    </p>
    <div
      class="flex flex-col mb-8 lg:mb-16 space-y-4 sm:flex-row sm:justify-center sm:space-y-0 sm:space-x-4"
    >
    </div>
  </div>
</section>
